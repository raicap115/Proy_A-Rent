@{
    ViewData["Title"] = "SignUp";
}
@model Usuario

@{
    Layout="_Layout_LogSing";
}

    
    <div class="container h-100" style="margin-bottom: 50%;">
		  <div class="d-flex justify-content-center h-100">
			  <div class="sing_card" style="margin-top: 75px;" >
          <div class="d-flex justify-content-center">
					  <div class="brand_logo_container">
						  <img src="~/images/logo.jpg" class="brand_logo" alt="Logo">
					  </div>
				  </div>
          <h3 style="text-align: center; margin-top: 95px; color: #FFFFFF;">Reg√≠strate</h3>

          <form method="post">          

            <div class="container h-100">

              <div class="form-group">
                <label asp-for="nombre" style="color: #FFFFFF;"></label>
