@{
    ViewData["Title"] = "SingUp";
}
@model Usuario

@{
    Layout="_Layout_LogSing";
}

    
    <div class="container h-100">
		  <div class="d-flex justify-content-center h-100">
			  <div class="sing_card" style="margin-top: 75px;" >
          <div class="d-flex justify-content-center">
					  <div class="brand_logo_container">
						  <img src="~/images/logo.jpg" class="brand_logo" alt="Logo">
					  </div>
				  </div>
          <h4 style="text-align: center; margin-top: 95px;">Regístrate</h4>

          <form asp-controller="Home" asp-action="Enviar">

            

            <div class="container h-100">

              <div class="form-group">
                <label asp-for="nombre"></label>
                <input type="text" asp-for="nombre" class="form-control" placeholder="Ingrese nombres completos">
                <span asp-validation-for="nombre" class="text-danger"></span>  
              </div>
              <div class="form-group">
                <label asp-for="apellido"></label>
                <input type="text" asp-for="apellido" class="form-control" placeholder="Ingrese apellidos completos">
                <span asp-validation-for="apellido" class="text-danger"></span>
              </div>              
              <div class="form-group">
                <label asp-for="dni"></label>
                <input type="text" asp-for="dni" class="form-control" placeholder="Ingrese número de documento de identidad">
                <span asp-validation-for="dni" class="text-danger"></span>
              </div>              
              <div class="form-group">
                <label asp-for="celular"></label>
                <input type="text" asp-for="celular" class="form-control" placeholder="Ingrese un número de contacto">
                <span asp-validation-for="celular" class="text-danger"></span>
              </div>
              <div class="form-group">
                <label asp-for="email"></label>
                <input type="email" asp-for="email" class="form-control" placeholder="Ingrese dirección de correo electrónico">
                <span asp-validation-for="email" class="text-danger"></span>
              </div>
              <div class="form-group">
                <label asp-for="password"></label>
                <input type="password" asp-for="password" class="form-control" placeholder="Ingrese nueva contraseña">
                <span asp-validation-for="password" class="text-danger"></span>
              </div>
                          
                  <div class="d-flex justify-content-center mt-3 login_container">
                    <button type="submit" name="button" class="btn login_btn" style="margin-top: 20px;">Login</button>
                  </div>
            </div>
          </form>
          
        </div>
      </div>
    </div>

